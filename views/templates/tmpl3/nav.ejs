<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title><%= result[0].title %></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
        <script src="https://unpkg.com/@themesberg/flowbite@1.3.0/dist/flowbite.bundle.js"></script>
        <link rel="stylesheet" href="<%= result[0].shopcss %>">
    </head>
    <body>
        <header class="bg-white">
            <nav class="bg-gray-200 shadow shadow-gray-300 w-100 px-8 md:px-auto">
                <div class="md:h-16 h-28 mx-auto md:px-4 container flex items-center justify-between flex-wrap md:flex-nowrap">
                    <div class="text-gray-700 md:text-center text-2xl font-semibold"><a href="/shop/<%= result[0].id %>"><%= result[0].title %></a></div>
                    <div class="text-gray-500 order-3 w-full md:w-auto md:order-2">
                        <ul class="flex font-semibold justify-between">
                            <% nav.forEach(function(data){ %>
                                <li class="md:px-4 md:py-2 hover:text-indigo-400"><a href="<% if(data.value.startsWith('page:')){%> /shop/<%= result[0].id %>/page/<%= data.value.replace('page:', '') %> <% }else{ %> <%= data.value %> <% } %> "><%= data.name %></a></li>
                            <% }) %>
                        </ul>
                    </div>
                    <div class="order-2 md:order-3">
                        <button class="bg-green-500 hover:bg-green-700 text-white text-center py-2 px-4 rounded" data-modal-toggle="defaultModal">Voucher</button>
                        <div id="defaultModal" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed right-0 left-0 top-4 z-50 justify-center items-center h-modal md:h-full md:inset-0">
                            <div class="relative px-4 w-full max-w-2xl h-full md:h-auto">
                                <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
                                  <form action="/shop/<%= result[0].id %>/usevoucher" method="POST">
                                    <div class="flex justify-between items-start p-5 rounded-t border-b dark:border-gray-600">
                                        <h3 class="text-xl font-semibold text-gray-900 lg:text-2xl dark:text-white">Realizacja vouchera</h3>
                                        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="defaultModal">
                                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>  
                                        </button>
                                    </div>
                                    <div class="p-6 space-y-6">
                                      <input type="text" name="nick" class="mt-4 text-blue-600 items-center justify-between w-full bg-white rounded-md border p-4 focus:outline-none" placeholder="Twoj nick" required>
                                      <input type="text" name="code" class="mt-4 text-blue-600 items-center justify-between w-full bg-white rounded-md border p-4 focus:outline-none" placeholder="Kod vouchera" required>

                                    </div>
                                    <div class="flex items-center p-6 space-x-2 rounded-b border-t border-gray-200 dark:border-gray-600">
                                      <button class="bg-green-500 hover:bg-green-700 text-white text-center py-2 px-4 rounded">Wykorzystaj</button>
                                    </div>
                                  </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <%- include('../../includes/notyf'); %>